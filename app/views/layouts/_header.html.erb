      <!-- Button to close -->
      <a href="javascript:void(0)" class="closeMenu" onclick="closeNav()">&times;</a>
    </div>
    <!-- Menu content -->
    <div class="menu">
      <div class="part-1">
        <div id="part-1-row">
          <a href="/"><%= image_tag("home.png", alt:"Imagen cambiar") %>Inicio</a>
