<% if @steps.length == 0 %>
  <% if @step == 2 %>
    jQuery('#steps').append('<%= escape_javascript(render partial: "static_pages/warning") %>');
  <% else %>
    jQuery('#steps').append('<%= escape_javascript(render partial: "static_pages/other_actions") %>');
  <% end %>
<% else %>
  console.log("STEP STEP", <%= @step %>);
  $('.btn-back')[0].href='<%= "/paso/#{(@step - 1)}/#{@platform.id}/#{@reason.id}/#{@standard.id}?back=1#{ @token_param }" %>';
  if (jQuery('#step-'+<%= @step %>).length == 0 ) {
    <% if @back %>
      jQuery('#steps').prepend('<%= escape_javascript(render partial: "steps") %>');
    <% else %>
      jQuery('#steps').append('<%= escape_javascript(render partial: "steps") %>');
    <% end %>
  }
<%end%>
<% if @back %>
  slideTo(<%= @step %>, <%= (@step + 1) %>);
<% else %>
  slideTo(<%= @step %>, <%= (@step - 1) %>);
<% end %>
